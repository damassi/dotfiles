# Aliases

# Programs
alias audacity='open /Applications/Audacity.app/Contents/MacOS/Audacity'
alias be='bundle exec'
alias flush-memcache="echo 'flush_all' | netcat 127.0.0.1 11211"
alias fuck='$(thefuck $(fc -ln -1))' # Easy corrections via https://github.com/nvbn/thefuck
alias gs='git status'
alias pip="/usr/local/Cellar/python/3.7.6_1/bin/pip3"
alias python="/usr/local/Cellar/python/3.7.6_1/bin/python3"

# Folders
alias dt='cd ~/Desktop'
alias Sites='cd ~/Sites'
alias gh='cd ~/Sites/Github'
alias cn='cd ~/Sites/CN'
alias make='make -j'
alias wfmu='tuner wfmu'
alias kpfa='tuner kpfa'
alias wnyc='tuner wnyc'
alias find-ports='lsof -i tcp:5000'
alias es='cd && cn && cd elixir-school'

# Sites
alias usw='cn && cd unseenworlds.github.io'
alias fret='cn && cd fretboard-trainer'
alias ervell='Sites && cd ervell'

